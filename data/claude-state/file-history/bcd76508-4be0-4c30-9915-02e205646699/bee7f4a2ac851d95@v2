'use client';

import { useEffect, useState } from 'react';
import type { WorkstreamSettings } from '../../../types/workstream-settings';

interface WorkstreamConfiguration {
  id: string;
  name: string;
  slug: string;
  workspace: {
    name: string;
    confluence_space_key: string | null;
    monday_workspace_id: string | null;
  } | null;
  monday: {
    epic_board_id: string | null;
    feature_board_id: string | null;
    story_board_id: string | null;
  };
  confluence: {
    page_id: string | null;
  };
  settings: WorkstreamSettings;
}

export default function WorkstreamsSettingsPage() {
  const [workstreams, setWorkstreams] = useState<WorkstreamConfiguration[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    async function fetchConfigurations() {
      try {
        const response = await fetch('/api/workstreams/configurations');
        if (!response.ok) {
          throw new Error('Failed to fetch workstream configurations');
        }
        const data = await response.json();
        setWorkstreams(data.workstreams || []);
      } catch (err) {
        setError(err instanceof Error ? err.message : 'Unknown error');
      } finally {
        setLoading(false);
      }
    }

    fetchConfigurations();
  }, []);

  if (loading) {
    return (
      <div className="rounded-lg border border-gray-200 bg-white p-6">
        <div className="animate-pulse">
          <div className="h-6 bg-gray-200 rounded w-1/4 mb-4"></div>
          <div className="h-4 bg-gray-200 rounded w-1/2"></div>
        </div>
      </div>
    );
  }

  if (error) {
    return (
      <div className="rounded-lg border border-red-200 bg-red-50 p-6">
        <h2 className="text-xl font-semibold text-red-900 mb-2">Error</h2>
        <p className="text-sm text-red-600">{error}</p>
      </div>
    );
  }

  return (
    <div className="space-y-6">
      <div className="rounded-lg border border-gray-200 bg-white p-6">
        <h2 className="text-xl font-semibold text-gray-900 mb-2">
          Workstream Configurations
        </h2>
        <p className="text-sm text-gray-600 mb-6">
          View configured integrations and settings for each workstream
        </p>

        {workstreams.length === 0 ? (
          <p className="text-sm text-gray-500">No workstreams configured</p>
        ) : (
          <div className="space-y-6">
            {workstreams.map((ws) => (
              <div
                key={ws.id}
                className="border border-gray-200 rounded-lg p-5 bg-gray-50"
              >
                {/* Header */}
                <div className="mb-4">
                  <h3 className="text-lg font-medium text-gray-900">
                    {ws.name}
                  </h3>
                  <p className="text-sm text-gray-500">
                    Slug: <code className="text-xs bg-gray-200 px-1.5 py-0.5 rounded">{ws.slug}</code>
                  </p>
                  {ws.workspace && (
                    <p className="text-sm text-gray-500 mt-1">
                      Workspace: {ws.workspace.name}
                    </p>
                  )}
                </div>

                {/* Monday.com Boards */}
                <div className="mb-4">
                  <h4 className="text-sm font-medium text-gray-700 mb-2">
                    Monday.com Board IDs
                  </h4>
                  <div className="grid grid-cols-1 sm:grid-cols-3 gap-3">
                    <div className="bg-white p-3 rounded border border-gray-200">
                      <div className="text-xs text-gray-500 mb-1">Epic Board</div>
                      <div className="font-mono text-sm">
                        {ws.monday.epic_board_id || (
                          <span className="text-gray-400">Not configured</span>
                        )}
                      </div>
                    </div>
                    <div className="bg-white p-3 rounded border border-gray-200">
                      <div className="text-xs text-gray-500 mb-1">Feature Board</div>
                      <div className="font-mono text-sm">
                        {ws.monday.feature_board_id || (
                          <span className="text-gray-400">Not configured</span>
                        )}
                      </div>
                    </div>
                    <div className="bg-white p-3 rounded border border-gray-200">
                      <div className="text-xs text-gray-500 mb-1">Story Board</div>
                      <div className="font-mono text-sm">
                        {ws.monday.story_board_id || (
                          <span className="text-gray-400">Not configured</span>
                        )}
                      </div>
                    </div>
                  </div>
                </div>

                {/* Confluence */}
                <div className="mb-4">
                  <h4 className="text-sm font-medium text-gray-700 mb-2">
                    Confluence Integration
                  </h4>
                  <div className="bg-white p-3 rounded border border-gray-200">
                    <div className="flex items-center justify-between">
                      <div>
                        <div className="text-xs text-gray-500 mb-1">Page ID</div>
                        <div className="font-mono text-sm">
                          {ws.confluence.page_id || (
                            <span className="text-gray-400">Not configured</span>
                          )}
                        </div>
                      </div>
                      {ws.workspace?.confluence_space_key && (
                        <div className="text-right">
                          <div className="text-xs text-gray-500 mb-1">Space Key</div>
                          <div className="font-mono text-sm">
                            {ws.workspace.confluence_space_key}
                          </div>
                        </div>
                      )}
                    </div>
                  </div>
                </div>

                {/* Monday Column Mappings */}
                {ws.settings.monday_column_mappings && (
                  <div>
                    <h4 className="text-sm font-medium text-gray-700 mb-2">
                      Monday Column Mappings
                    </h4>
                    <div className="bg-white p-3 rounded border border-gray-200">
                      <div className="space-y-3">
                        {Object.entries(ws.settings.monday_column_mappings).map(
                          ([entityType, mappings]) => (
                            <div key={entityType}>
                              <div className="text-xs font-medium text-gray-600 uppercase mb-1.5">
                                {entityType}
                              </div>
                              <div className="grid grid-cols-2 gap-2 text-xs">
                                {Object.entries(mappings || {}).map(([field, columnId]) => (
                                  <div key={field} className="flex items-center gap-2">
                                    <span className="text-gray-500">{field}:</span>
                                    <code className="bg-gray-100 px-1.5 py-0.5 rounded">
                                      {columnId as string}
                                    </code>
                                  </div>
                                ))}
                              </div>
                            </div>
                          )
                        )}
                      </div>
                    </div>
                  </div>
                )}
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  );
}
