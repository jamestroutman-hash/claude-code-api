# Multi-stage build for smaller final image with build-time secret support
# This version supports injecting Claude Code config via build secrets
# Usage: docker build --secret id=claude_config,src=.claude-config.tar.gz -f Dockerfile.secure -t claude-code-api .

FROM python:3.11-slim as builder

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js (required for Claude Code CLI)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs && \
    rm -rf /var/lib/apt/lists/*

# Copy dependency files
COPY pyproject.toml setup.py ./
COPY claude_code_api ./claude_code_api

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir .

# Install Claude Code CLI globally
RUN npm install -g @anthropic-ai/claude-code-cli

# Final stage
FROM python:3.11-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js (required for Claude Code CLI)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs && \
    rm -rf /var/lib/apt/lists/*

# Copy Python packages from builder
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy Claude Code CLI from builder
COPY --from=builder /usr/lib/node_modules/@anthropic-ai/claude-code-cli /usr/lib/node_modules/@anthropic-ai/claude-code-cli
RUN ln -s /usr/lib/node_modules/@anthropic-ai/claude-code-cli/bin/claude-code /usr/local/bin/claude-code

# Set working directory
WORKDIR /app

# Copy application code
COPY claude_code_api ./claude_code_api
COPY pyproject.toml setup.py ./

# Create necessary directories
RUN mkdir -p /app/data /root/.config/claude

# Mount build secret if available (for secure builds)
# Create tarball with: tar -czf .claude-config.tar.gz -C .claude-config .
RUN --mount=type=secret,id=claude_config,target=/tmp/claude_config.tar.gz \
    if [ -f /tmp/claude_config.tar.gz ]; then \
        tar -xzf /tmp/claude_config.tar.gz -C /root/.config/claude/ && \
        echo "Claude config loaded from build secret"; \
    else \
        echo "No build secret provided, will use environment variables for auth"; \
    fi

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PORT=8000
ENV HOST=0.0.0.0

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the application
CMD ["python", "-m", "uvicorn", "claude_code_api.main:app", "--host", "0.0.0.0", "--port", "8000"]
