import { serverTables } from '../../lib/db/supabase-server';
import Link from 'next/link';
import { SyncButton } from './sync-button';
import { SearchBar } from './search-bar';
import { WorkstreamFilter } from './workstream-filter';

interface DocumentsPageProps {
  searchParams: Promise<{
    q?: string;
    workstream?: string;
  }>;
}

export default async function DocumentsPage({ searchParams }: DocumentsPageProps) {
  const { q: searchQuery, workstream: workstreamId } = await searchParams;

  // Build the query with optional search
  let query = serverTables.confluencePages().select(
    `
      id,
      title,
      confluence_page_id,
      confluence_space_key,
      last_modified,
      author,
      workspace:workspaces(id, name),
      workstream:workstreams(id, name, slug)
    `
  );

  // Add search filter if query is provided
  if (searchQuery) {
    query = query.or(
      `title.ilike.%${searchQuery}%,content_plain.ilike.%${searchQuery}%`
    );
  }

  // Add workstream filter if provided
  if (workstreamId) {
    query = query.eq('workstream_id', workstreamId);
  }

  const { data: documents, error } = await query.order('last_modified', {
    ascending: false,
  });

  if (error) {
    console.error('Error fetching documents:', error);
    return <div>Error loading documents</div>;
  }

  // Get first workspace (or you could make this configurable)
  const { data: workspaces } = await serverTables
    .workspaces()
    .select('id, name')
    .limit(1);

  const defaultWorkspace = workspaces?.[0];
  const spaceKey = process.env.CONFLUENCE_SPACE_KEY || 'CTY';

  // Fetch all workstreams for the filter dropdown
  const { data: workstreams } = await serverTables
    .workstreams()
    .select('id, name, slug')
    .order('name', { ascending: true });

  return (
    <div className="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
      <div className="mb-8">
        <div className="flex items-center justify-between">
          <div>
            <h1 className="text-3xl font-bold text-gray-900">
              Confluence Documents
            </h1>
            <p className="mt-2 text-sm text-gray-600">
              Browse and view Confluence pages synced to your workspace
            </p>
          </div>
          {defaultWorkspace && (
            <SyncButton spaceId={spaceKey} workspaceId={defaultWorkspace.id} />
          )}
        </div>

        {/* Filters */}
        <div className="mt-6 flex gap-4">
          <div className="flex-1 max-w-md">
            <SearchBar />
          </div>
          <div className="w-64">
            <WorkstreamFilter workstreams={workstreams || []} />
          </div>
        </div>

        {/* Filter Status Info */}
        {(searchQuery || workstreamId) && (
          <div className="mt-4 text-sm text-gray-600">
            {documents && documents.length > 0 ? (
              <p>
                Found {documents.length} result{documents.length !== 1 ? 's' : ''}
                {searchQuery && ` for "${searchQuery}"`}
                {workstreamId && ` in ${workstreams?.find(w => w.id === workstreamId)?.name || 'selected workstream'}`}
              </p>
            ) : (
              <p>
                No results found
                {searchQuery && ` for "${searchQuery}"`}
                {workstreamId && ` in ${workstreams?.find(w => w.id === workstreamId)?.name || 'selected workstream'}`}
              </p>
            )}
          </div>
        )}
      </div>

      {!documents || documents.length === 0 ? (
        <div className="rounded-lg border border-gray-200 bg-white p-8 text-center">
          <p className="text-gray-600">
            {searchQuery
              ? `No documents found matching "${searchQuery}". Try a different search term.`
              : 'No documents found. Sync Confluence pages to get started.'}
          </p>
        </div>
      ) : (
        <div className="overflow-hidden rounded-lg border border-gray-200 bg-white shadow">
          <table className="min-w-full divide-y divide-gray-200">
            <thead className="bg-gray-50">
              <tr>
                <th
                  scope="col"
                  className="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                >
                  Title
                </th>
                <th
                  scope="col"
                  className="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                >
                  Space
                </th>
                <th
                  scope="col"
                  className="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                >
                  Workstream
                </th>
                <th
                  scope="col"
                  className="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                >
                  Workspace
                </th>
                <th
                  scope="col"
                  className="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                >
                  Last Modified
                </th>
                <th
                  scope="col"
                  className="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                >
                  Author
                </th>
              </tr>
            </thead>
            <tbody className="divide-y divide-gray-200 bg-white">
              {documents.map((doc) => (
                <tr key={doc.id} className="hover:bg-gray-50">
                  <td className="px-6 py-4">
                    <Link
                      href={`/documents/${doc.id}`}
                      className="text-sm font-medium text-blue-600 hover:text-blue-800"
                    >
                      {doc.title}
                    </Link>
                  </td>
                  <td className="px-6 py-4">
                    <span className="text-sm text-gray-900">
                      {doc.confluence_space_key}
                    </span>
                  </td>
                  <td className="px-6 py-4">
                    {doc.workstream ? (
                      <Link
                        href={`/workstreams/${doc.workstream.slug}`}
                        className="text-sm text-blue-600 hover:text-blue-800"
                      >
                        {doc.workstream.name}
                      </Link>
                    ) : (
                      <span className="text-sm text-gray-400">Not mapped</span>
                    )}
                  </td>
                  <td className="px-6 py-4">
                    <span className="text-sm text-gray-900">
                      {doc.workspace?.name || 'Unknown'}
                    </span>
                  </td>
                  <td className="px-6 py-4">
                    <span className="text-sm text-gray-500">
                      {doc.last_modified
                        ? new Date(doc.last_modified).toLocaleDateString()
                        : 'N/A'}
                    </span>
                  </td>
                  <td className="px-6 py-4">
                    <span className="text-sm text-gray-500">
                      {doc.author || 'Unknown'}
                    </span>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      )}
    </div>
  );
}
