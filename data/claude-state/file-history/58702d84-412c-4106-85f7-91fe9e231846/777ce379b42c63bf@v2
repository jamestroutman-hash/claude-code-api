import Link from 'next/link';
import { Suspense } from 'react';
import { serverTables } from '../lib/db/supabase-server';
import type { Workspace, Workstream } from '../lib/db/supabase';
import { EmailConfirmationToast } from '../components/EmailConfirmationToast';

async function getWorkspaceData() {
  const { data: workspaces } = await serverTables.workspaces().select('*');
  const { data: workstreams } = await serverTables.workstreams().select('*').order('name');
  const { count: epicsCount } = await serverTables.epics().select('*', { count: 'exact', head: true });
  const { count: featuresCount } = await serverTables.features().select('*', { count: 'exact', head: true });
  const { count: storiesCount } = await serverTables.stories().select('*', { count: 'exact', head: true });

  return {
    workspace: workspaces?.[0] as Workspace | null,
    workstreams: workstreams as Workstream[] | null,
    epicsCount: epicsCount || 0,
    featuresCount: featuresCount || 0,
    storiesCount: storiesCount || 0,
  };
}

export default async function DashboardPage() {
  const { workspace, workstreams, epicsCount, featuresCount, storiesCount } = await getWorkspaceData();

  if (!workspace) {
    return (
      <div className="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
        <div className="text-center">
          <h1 className="text-2xl font-bold text-gray-900">No workspace found</h1>
          <p className="mt-2 text-gray-600">Please run the seed data script to create a workspace.</p>
        </div>
      </div>
    );
  }

  return (
    <>
      <Suspense fallback={null}>
        <EmailConfirmationToast />
      </Suspense>
      <div className="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
        {/* Header */}
        <div className="mb-8">
        <h1 className="text-3xl font-bold text-gray-900">{workspace.name}</h1>
        <p className="mt-2 text-gray-600">{workspace.description}</p>
        <div className="mt-4 flex gap-4 text-sm text-gray-500">
          {workspace.confluence_space_key && (
            <div>
              <span className="font-medium">Confluence:</span> {workspace.confluence_space_key}
            </div>
          )}
          {workspace.monday_workspace_id && (
            <div>
              <span className="font-medium">Monday.com:</span> {workspace.monday_workspace_id}
            </div>
          )}
        </div>
      </div>

      {/* Workstreams Grid */}
      <div className="mb-8">
        <h2 className="text-xl font-semibold text-gray-900 mb-4">Workstreams</h2>
        <div className="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {workstreams?.map((workstream) => (
            <Link
              key={workstream.id}
              href={`/workstreams/${workstream.slug}`}
              className="block rounded-lg border border-gray-200 bg-white p-6 shadow-sm hover:shadow-md transition-shadow"
            >
              <div className="flex items-start justify-between">
                <div className="flex-1">
                  <h3 className="text-lg font-semibold text-gray-900">
                    {workstream.name}
                  </h3>
                  {workstream.description && (
                    <p className="mt-2 text-sm text-gray-600 line-clamp-2">
                      {workstream.description}
                    </p>
                  )}
                </div>
                {workstream.color && (
                  <div
                    className="ml-4 h-4 w-4 rounded-full flex-shrink-0"
                    style={{ backgroundColor: workstream.color }}
                  />
                )}
              </div>
              {workstream.monday_board_id && (
                <div className="mt-4 text-xs text-gray-500">
                  Board: {workstream.monday_board_id}
                </div>
              )}
            </Link>
          ))}
        </div>
      </div>

      {/* Quick Stats */}
      <div className="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
        <div className="rounded-lg border border-gray-200 bg-white p-6">
          <div className="text-sm font-medium text-gray-500">Workstreams</div>
          <div className="mt-2 text-3xl font-bold text-gray-900">
            {workstreams?.length || 0}
          </div>
        </div>
        <div className="rounded-lg border border-gray-200 bg-white p-6">
          <div className="text-sm font-medium text-gray-500">Epics</div>
          <div className="mt-2 text-3xl font-bold text-gray-900">{epicsCount}</div>
        </div>
        <div className="rounded-lg border border-gray-200 bg-white p-6">
          <div className="text-sm font-medium text-gray-500">Features</div>
          <div className="mt-2 text-3xl font-bold text-gray-900">{featuresCount}</div>
        </div>
        <div className="rounded-lg border border-gray-200 bg-white p-6">
          <div className="text-sm font-medium text-gray-500">Stories</div>
          <div className="mt-2 text-3xl font-bold text-gray-900">{storiesCount}</div>
        </div>
      </div>
      </div>
    </>
  );
}
