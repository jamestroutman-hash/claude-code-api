version: '3.8'

services:
  claude-code-api:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: claude-code-api
    ports:
      - "8000:8000"
    environment:
      # API Configuration
      - PORT=8000
      - HOST=0.0.0.0

      # Claude Code Configuration
      # Add your Anthropic API key here or via .env file
      - ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

      # Optional: Authentication
      # - REQUIRE_AUTH=false

      # Optional: Database
      # - DATABASE_URL=sqlite:///data/claude_code_api.db

    volumes:
      # Mount data directory for persistence
      - ./data:/app/data

      # Optional: Mount workspace directory if needed
      # - ./workspace:/app/workspace

    restart: unless-stopped

    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 5s

    # Resource limits (optional)
    deploy:
      resources:
        limits:
          cpus: '2'
          memory: 2G
        reservations:
          cpus: '1'
          memory: 1G

networks:
  default:
    name: claude-code-network
