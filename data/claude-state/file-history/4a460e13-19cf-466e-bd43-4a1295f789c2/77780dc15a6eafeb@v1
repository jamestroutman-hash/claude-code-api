import Link from 'next/link';
import { notFound } from 'next/navigation';
import { serverTables } from '../../../../../lib/db/supabase-server';
import { EpicHeader } from '../../../../../components/EpicHeader';

interface PageProps {
  params: Promise<{ slug: string; epicKey: string }>;
}

async function getEpicData(workstreamSlug: string, epicKey: string) {
  // Get workspace
  const workspaces = await serverTables.workspaces().select('*').limit(1);
  const workspace = workspaces.data?.[0];
  if (!workspace) {
    console.error('No workspace found');
    return null;
  }

  // Get workstream
  const workstreams = await serverTables
    .workstreams()
    .select('*')
    .eq('workspace_id', workspace.id)
    .eq('slug', workstreamSlug)
    .single();

  if (workstreams.error) {
    console.error('Workstream query error:', workstreams.error);
  }
  if (!workstreams.data) {
    console.error('No workstream found for slug:', workstreamSlug);
    return null;
  }
  const workstream = workstreams.data;

  // Get epic by key (using limit(1) instead of single() to handle duplicates)
  const epics = await serverTables
    .epics()
    .select('*')
    .eq('workstream_id', workstream.id)
    .eq('key', epicKey)
    .limit(1);

  if (epics.error) {
    console.error('Epic query error:', JSON.stringify(epics.error, null, 2), 'for key:', epicKey, 'workstream_id:', workstream.id);
    return null;
  }
  if (!epics.data || epics.data.length === 0) {
    console.error('No epic found for key:', epicKey, 'in workstream:', workstream.id);
    return null;
  }
  const epic = epics.data[0]!;

  // Get features for this epic with their story counts
  const features = await serverTables
    .features()
    .select('*, stories(id, title, key, status, priority)')
    .eq('epic_id', epic.id)
    .order('key', { ascending: true });

  if (features.error) {
    console.error('Features query error:', JSON.stringify(features.error, null, 2), 'for epic_id:', epic.id);
  }

  return {
    workspace,
    workstream,
    epic,
    features: features.data || [],
  };
}

export default async function EpicDetailPage({ params }: PageProps) {
  const { slug, epicKey } = await params;
  const data = await getEpicData(slug, epicKey);

  if (!data) {
    notFound();
  }

  const { workspace, workstream, epic, features } = data;

  // Build Confluence base URL from workspace settings
  const confluenceBaseUrl = workspace.confluence_base_url || 'https://veritasprime.atlassian.net';
  const confluenceSpaceKey = workspace.confluence_space_key || 'CTY';

  return (
    <div className="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
      {/* Breadcrumb */}
      <div className="mb-8">
        <div className="flex items-center gap-2 text-sm text-gray-500 mb-4">
          <Link href="/workstreams" className="hover:text-gray-700">
            Workstreams
          </Link>
          <span>/</span>
          <Link href={`/workstreams/${slug}`} className="hover:text-gray-700">
            {workstream.name}
          </Link>
          <span>/</span>
          <span className="text-gray-900">{epic.key}</span>
        </div>

        {/* Epic Header */}
        <EpicHeader
          epic={epic}
          workstreamSlug={slug}
          confluenceBaseUrl={confluenceBaseUrl}
          confluenceSpaceKey={confluenceSpaceKey}
        />
      </div>

      {/* Stats */}
      <div className="grid grid-cols-1 gap-6 sm:grid-cols-3 mb-8">
        <div className="rounded-lg border border-gray-200 bg-white p-6">
          <div className="text-sm font-medium text-gray-500">Features</div>
          <div className="mt-2 text-3xl font-bold text-gray-900">
            {features.length}
          </div>
        </div>
        <div className="rounded-lg border border-gray-200 bg-white p-6">
          <div className="text-sm font-medium text-gray-500">Stories</div>
          <div className="mt-2 text-3xl font-bold text-gray-900">
            {features.reduce((sum, f: any) => sum + (f.stories?.length || 0), 0)}
          </div>
        </div>
        <div className="rounded-lg border border-gray-200 bg-white p-6">
          <div className="text-sm font-medium text-gray-500">Status</div>
          <div className="mt-2">
            <span
              className={`inline-flex items-center rounded-full px-3 py-1 text-sm font-medium ${
                epic.status === 'in_progress'
                  ? 'bg-blue-100 text-blue-800'
                  : epic.status === 'completed'
                  ? 'bg-green-100 text-green-800'
                  : epic.status === 'discovery'
                  ? 'bg-purple-100 text-purple-800'
                  : 'bg-gray-100 text-gray-800'
              }`}
            >
              {epic.status}
            </span>
          </div>
        </div>
      </div>

      {/* Features */}
      <div>
        <div className="flex items-center justify-between mb-4">
          <h2 className="text-2xl font-bold text-gray-900">Features</h2>
          <Link
            href={`/workstreams/${slug}/epics/${epicKey}/features/new`}
            className="rounded-md bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700"
          >
            Create Feature with AI
          </Link>
        </div>
        {features.length === 0 ? (
          <div className="rounded-lg border border-gray-200 bg-white p-8 text-center">
            <p className="text-gray-500">No features found for this epic</p>
          </div>
        ) : (
          <div className="space-y-6">
            {features.map((feature: any) => (
              <div key={feature.id} className="rounded-lg border border-gray-200 bg-white p-6">
                <div className="flex items-start justify-between mb-4">
                  <div className="flex-1">
                    <div className="flex items-center gap-3 mb-2">
                      <span className="text-sm font-mono text-gray-500">{feature.key}</span>
                      <span
                        className={`inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium ${
                          feature.status === 'in_progress'
                            ? 'bg-blue-100 text-blue-800'
                            : feature.status === 'completed'
                            ? 'bg-green-100 text-green-800'
                            : 'bg-gray-100 text-gray-800'
                        }`}
                      >
                        {feature.status}
                      </span>
                      <span
                        className={`inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium ${
                          feature.priority === 'critical'
                            ? 'bg-red-100 text-red-800'
                            : feature.priority === 'high'
                            ? 'bg-orange-100 text-orange-800'
                            : 'bg-gray-100 text-gray-800'
                        }`}
                      >
                        {feature.priority}
                      </span>
                    </div>
                    <Link
                      href={`/workstreams/${slug}/epics/${epicKey}/features/${feature.key}`}
                      className="text-lg font-semibold text-gray-900 hover:text-blue-600 transition-colors"
                    >
                      {feature.title}
                    </Link>
                    {feature.description && (
                      <p className="mt-1 text-sm text-gray-600">{feature.description}</p>
                    )}
                  </div>
                  <div className="ml-4 text-right">
                    <div className="text-sm text-gray-500">
                      {feature.stories?.length || 0} stories
                    </div>
                  </div>
                </div>

                {/* Stories for this feature */}
                {feature.stories && feature.stories.length > 0 && (
                  <div className="mt-4 space-y-2 border-t border-gray-100 pt-4">
                    <h4 className="text-sm font-medium text-gray-700">Stories:</h4>
                    {feature.stories.map((story: any) => (
                      <div
                        key={story.id}
                        className="flex items-center justify-between rounded-md bg-gray-50 px-3 py-2"
                      >
                        <div className="flex items-center gap-2 flex-1">
                          <span className="text-xs font-mono text-gray-500">{story.key}</span>
                          <span className="text-sm text-gray-900">{story.title}</span>
                        </div>
                        <div className="flex items-center gap-2">
                          <span
                            className={`inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium ${
                              story.status === 'in_progress'
                                ? 'bg-blue-100 text-blue-800'
                                : story.status === 'completed'
                                ? 'bg-green-100 text-green-800'
                                : 'bg-gray-100 text-gray-800'
                            }`}
                          >
                            {story.status}
                          </span>
                        </div>
                      </div>
                    ))}
                  </div>
                )}
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  );
}
